<?xml version="1.0" encoding="UTF-8"?>
<config_metabuild>

<!--
 ===============================================================
 COMPONENT
 ===============================================================
 Specifies the variable mapping from CIME variables to the
 components build system variables

 Conditional requirements are specified as attributes, and values to be used are specified as values of elements
-->

<component>
  <configuration buildtool="CMake">
    <!-- Variables to be defined for all CMake configurations -->
    <CMAKE_Fortran_COMPILER>${MPIFC}</CMAKE_Fortran_COMPILER>
    <CMAKE_C_COMPILER>${MPICC}</CMAKE_C_COMPILER>
    <CMAKE_CXX_COMPILER>${MPICXX}</CMAKE_CXX_COMPILER>

    <CMAKE_Fortran_FLAGS>${FFLAGS} ${FPPDEFS} ${INCLDIR}</CMAKE_Fortran_FLAGS>
    <CMAKE_C_FLAGS>${CFLAGS} ${INCLDIR}</CMAKE_C_FLAGS>
    <CMAKE_CXX_FLAGS>${CXXFLAGS} ${INCLDIR}</CMAKE_CXX_FLAGS>

    <CMAKE_VERBOSE_MAKEFILE>ON</CMAKE_VERBOSE_MAKEFILE>
  </configuration>
</component>

<component COMP="pio1">
  <buildtool>CMake</buildtool>
  <configuration>
    <CMAKE_MODULE_PATH>${CIMEROOT}/externals/pio2/cmake</CMAKE_MODULE_PATH>

    <GPTL_PATH DEBUG="True" BUILD_THREADED="True">${EXEROOT}/${COMPILER}/${MPILIB}/debug/threads</GPTL_PATH>
    <GPTL_PATH DEBUG="True" BUILD_THREADED="False">${EXEROOT}/${COMPILER}/${MPILIB}/debug/nothreads</GPTL_PATH>
    <GPTL_PATH DEBUG="False" BUILD_THREADED="True">${EXEROOT}/${COMPILER}/${MPILIB}/nodebug/threads</GPTL_PATH>
    <GPTL_PATH DEBUG="False" BUILD_THREADED="False">${EXEROOT}/${COMPILER}/${MPILIB}/nodebug/nothreads</GPTL_PATH>

    <NetCDF_PATH NETCDF_SEPARATE="False">${NETCDF_PATH}</NetCDF_PATH>
    <NetCDF_PATH NETCDF_SEPARATE="True">${NETCDF_C_PATH}</NetCDF_PATH>
    <NetCDF_Fortran_PATH NETCDF_SEPARATE="True">${NETCDF_FORTRAN_PATH}</NetCDF_Fortran_PATH>
    <PnetCDF_PATH>${PNETCDF_PATH}</PnetCDF_PATH>
  </configuration>
</component>

</config_metabuild>
